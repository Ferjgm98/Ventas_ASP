<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hamburgers/1.1.3/hamburgers.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.0.1/tailwind.min.css" />
    <script src="https://kit.fontawesome.com/824c03a376.js"></script>   
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="md:overflow-y-hidden">
    <div class="w-full">
        <div class="h-screen">
            <div class="flex flex-row flex-wrap md:flex-col h-full">
                <div class="nav-container bg-white flex px-4 flex-row flex-no-wrap items-center justify-between w-full shadow-lg md:flex-col md:items-center md:h-screen md:w-1/4 lg:w-1/5">
                    <div class="p-4 md:py-5 z-100 photo-container z-10">
                        <figure class="flex justify-center flex-col flex-no-wrap items-center md:pt-4">
                            <img class="object-cover h-12 w-12 md:w-24 md:h-24 rounded-full border-solid border-2 border-indigo-400" src="http://enlight-app.appspot.com.storage.googleapis.com/shooting_2_2014-10-01T22-38-35-trevorpaulhus1.jpg" alt="Alternate Text" />
                            <p class="hidden md:block py-4 font-semibold">Jon Doe</p>
                        </figure>
                    </div>
                    <div class="fixed top-0 left-0 w-full h-screen z-100 bg-white md:relative md:h-auto md:flex-1 md:flex md:items-center mobile-nav">
                        <ul class="list-none w-full h-full flex flex-col items-center justify-center">
                            <li class="text-gray-900 text-lg w-full cursor-pointer h-auto w-auto menu-item">@Html.ActionLink("Inicio", "Index", "Usuarios")</li>
                            <li class="text-gray-900 text-lg w-full cursor-pointer h-auto w-auto menu-item">@Html.ActionLink("Acerca de", "About", "Home")</li>
                            <li class="text-gray-900 text-lg w-full cursor-pointer h-auto w-auto menu-item">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                            <li class="md:hidden text-gray-900 text-lg w-full cursor-pointer h-auto w-auto menu-item">
                                <div class="pt-6  border-t-2">
                                    <a href="#" class="text-blue-900 font-semibold">Cerrar sesión</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                    <div class="hidden md:block py-5 pb-8">
                        <a href="#" class="text-blue-900 font-semibold">Cerrar sesión</a>
                    </div>
                    <button class="hamburger hamburger--collapse md:hidden" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
                <div class="w-full md:w-3/4 lg:w-4/5">
                    <div class="h-screen md:overflow-y-auto w-full">
                        <div class="">
                            @RenderBody()

                            <footer class="pt-8">
                                <p class="text-center">&copy; @DateTime.Now.Year - Sistema de ventas</p>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/main.js")
</body>
</html>
