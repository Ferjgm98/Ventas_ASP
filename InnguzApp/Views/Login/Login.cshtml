@model InnguzApp.InnguzWC.LoginUser

@{
    ViewBag.Title = "Login";
}
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hamburgers/1.1.3/hamburgers.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.0.1/tailwind.min.css" />
    <script src="https://kit.fontawesome.com/824c03a376.js"></script>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="md:overflow-y-hidden">

    <div class="mx-auto w-1/2 md:w-1/4 h-screen flex flex-col justify-center items-center">
        <h2 class="text-4xl text-center text-indigo-700 font-bold">Sistema de ventas</h2>
        <div class="py-4">
            <h5 class="font-semibold py-2">¡Bienvenido de nuevo!</h5>
            <p class="text-gray-700">
                Bienvenido a Innguz es un gusto poder contar con tu visita, te pedimos que indiques
                tu usuario y contraseña para poder acceder a nuestra plataforma.
            </p>
        </div>
        @using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "w-full", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="text" placeholder="Usuario" name="Usuario" class="form-control" />
            </div>
            <div class="form-group py-4">
                <input type="password" placeholder="Contraseña" name="Clave" class="form-control" />
            </div>

            <div class="form-group py-4">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-default w-full" />
                </div>
            </div>
        }
        <div>
            <h1 class="text-red text-center font-semibold text-sm">
                @ViewBag.message
            </h1>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/main.js")
</body>
</html>
